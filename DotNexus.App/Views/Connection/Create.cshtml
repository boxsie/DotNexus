@using DotNexus.App.Models
@model DotNexus.App.Models.CreateConnectionViewModel

@{
    ViewData["Title"] = "Create connection";
    Layout = "~/Views/Shared/_LayoutDisconnected.cshtml";
}

<div class="container-fluid mt-4">
    <div class="offset-sm-3 offset-lg-4 col-sm-6 col-lg-4">
        <h1 class="mb-3">Create connection</h1>
        
        <form asp-controller="connection" asp-action="create" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url"></label>
                <input asp-for="Url" type="text" class="form-control" />
                <span asp-validation-for="Url"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" type="text" class="form-control" />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>

            <h3 class="mt-4">Settings</h3>
            <div class="form-group m-0">
                <input asp-for="ApiSessions" type="checkbox" />
                <label asp-for="ApiSessions"></label>
                <span asp-validation-for="ApiSessions"></span>
            </div>
            <div class="form-group">
                <input asp-for="IndexHeight" type="checkbox" />
                <label asp-for="IndexHeight"></label>
                <span asp-validation-for="IndexHeight"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create connection</button>
            </div>
        </form>
    </div>
</div>