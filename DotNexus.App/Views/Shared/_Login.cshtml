@using DotNexus.App.Models
@model DotNexus.App.Models.LoginViewModel

@{
    var returnUrl = Context.Request.Query["returnurl"];
}

<form asp-controller="account" asp-action="login" asp-route-returnurl="@returnUrl" method="post">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" type="text" class="form-control" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pin"></label>
        <input asp-for="Pin" type="number" class="form-control" />
        <span asp-validation-for="Pin"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
    
<p>Don't have an account? <a href="@Url.Action("create", "account")">Create account</a>.</p>